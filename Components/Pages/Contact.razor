@page "/contact"
@using ContactManagement.Models
@using Microsoft.EntityFrameworkCore

@inject IntranetHomeContext _context

<h3>Contact</h3>

@if (contacts != null && contacts.Any())
{
    <MudSimpleTable Style="overflow-x: auto;">
        <thead>
            <tr>
                @foreach (var h in headings)
                {
                    <th>@h</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var c in contacts)
            {
                <tr>
                    <td>@c.Nama</td>
                    <td>@c.Deskripsi</td>
                    <td>@c.MultiDeskripsi</td>
                    <td>@c.Alamat</td>
                    <td>@c.AlamatLain</td>
                    <td>@c.Telpno</td>
                    <td>@c.Hpno</td>
                    <td>@c.Faxno</td>
                </tr>
            }
        </tbody>
    </MudSimpleTable>
}
else
{
    <p>No contacts found.</p>
}

@code {
    string[] headings = {
        "Nama",
        "Deskripsi",
        "Deskripsi lain",
        "Contact person",
        "Alamat",
        "Alamat lain",
        "No telp",
        "No HP",
        "Fax"
    };

    private List<ContactManageman> contacts;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            contacts = await _context.ContactManagemen.ToListAsync();
            Console.WriteLine(System.Text.Json.JsonSerializer.Serialize(contacts));
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching contacts: {ex.Message}");
        }
    }
}
